@using KurumsalHastane.Models.AppointmentModels
@model AppointmentModel

<div class="row ">

    <div class="col-md-12">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PatientId" class="control-label font-weight-bold"></label>
            <select asp-for="PatientId" asp-items="@Model.Patients" class="form-control"></select>
            <span asp-validation-for="PatientId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SpecialistId" class="control-label font-weight-bold"></label>
            <select asp-for="SpecialistId" asp-items="@Model.Specialists" class="form-control"></select>
            <span asp-validation-for="SpecialistId" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="DepartmentId" class="control-label font-weight-bold"></label>
            <select asp-for="DepartmentId" asp-items="@Model.Departments" class="form-control"></select>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AppointnentDate" class="control-label font-weight-bold "></label>
            <input asp-for="AppointnentDate"  class="form-control"></input>
            <span asp-validation-for="AppointnentDate" class="text-danger"></span>
        </div>
        


    </div>
    

</div>