@using KurumsalHastane.Models.AppointmentModels
@model AppointmentModel

@{

    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="float-left">
            <h1 class="float-left d-inline">Details - </h1><h1 class="d-inline">Appointment</h1>

        </div>
        <div class="float-right">

            <a asp-action="Index">Back to List</a>
        </div>
    </div>

    <hr />
    <div class="row ">

        <div class="col-md-12">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label font-weight-bold"></label>
                <input asp-for="PatientName" class="form-control" disabled></input>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SpecialistId" class="control-label font-weight-bold"></label>
                <input asp-for="SpecialistName" class="form-control" disabled></input>
                <span asp-validation-for="SpecialistId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DepartmentId" class="control-label font-weight-bold"></label>
                <input asp-for="DepartmentName"  class="form-control" disabled></input>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointnentDate" class="control-label font-weight-bold "></label>
                <input asp-for="AppointnentDate" class="form-control" disabled></input>
                <span asp-validation-for="AppointnentDate" class="text-danger"></span>
            </div>


        </div>
        

    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
