@using KurumsalHastane.Models.AppointmentModels
@model AppointmentModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h4 class="d-inline">Are you sure you want to delete this <h3 class="d-inline text-danger">Appointment ?</h3></h4>
<div>

    <hr />
    <dl class="row">
        <div class="row col-sm-6">

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.PatientId)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.PatientName)  
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.SpecialistId)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.SpecialistName)  
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DepartmentId)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DepartmentName)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.AppointnentDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.AppointnentDate)
            </dd>
        </div>
        
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
